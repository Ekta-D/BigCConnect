<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="20dp" >

        <LinearLayout
            android:id="@+id/nameViewParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_plus_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Name:"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameInputView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/settings_edittext_normal"
                android:focusable="false"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/gray_1"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statusViewParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_plus_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Status:"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statusView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/gray_1"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stageViewParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_plus_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Stage:"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/stageInputView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/settings_edittext_normal"
                android:focusable="false"
                android:singleLine="true"
                android:inputType="number"
                android:digits="1,2,3,4,5,6,7,8,9"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/gray_1"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LiveViewParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_plus_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Lives:"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/livesInputView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/settings_edittext_normal"
                android:focusable="false"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/gray_1"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emailViewParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_plus_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Email:"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailInputView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/settings_edittext_normal"
                android:focusable="false"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/gray_1"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/privacyViewParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_plus_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Profile:"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/privacyGroup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/yesCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:checked="true"
                    android:text="@string/publicText"
                    android:textColor="@color/gray_1"
                    android:textSize="@dimen/normalTextSize" />

                <RadioButton
                    android:id="@+id/noCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/privateText"
                    android:textColor="@color/gray_1"
                    android:textSize="@dimen/normalTextSize" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/changePasswordParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_plus_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Change:"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/passwordInputView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/settings_edittext_normal"
                android:focusable="false"
                android:singleLine="true"
                android:text="Password"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/gray_1"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notificationsViewParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_plus_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Notifications:"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/notificationsGroup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/onCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:checked="true"
                    android:text="@string/onText"
                    android:textColor="@color/gray_1"
                    android:textSize="@dimen/normalTextSize" />

                <RadioButton
                    android:id="@+id/offCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/offText"
                    android:textColor="@color/gray_1"
                    android:textSize="@dimen/normalTextSize" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/accountDeativateParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_plus_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Account:"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Deactivate"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/gray_1"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/margin" >

        <ImageView
            android:id="@+id/notebookIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile_message" />
    </LinearLayout>

</LinearLayout>