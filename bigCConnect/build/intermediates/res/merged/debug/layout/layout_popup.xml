<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/container_shadow"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/editOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_color_selector"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="@string/edit"
        android:visibility="gone" />

    <View
        android:id="@+id/editOptionShadow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey"
        android:visibility="gone" />

    <TextView
        android:id="@+id/deleteOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_color_selector"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="Delete"
        android:visibility="gone" />

    <View
        android:id="@+id/deleteOptionShadow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey"
        android:visibility="gone" />

    <TextView
        android:id="@+id/flagOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_color_selector"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="@string/flagInappropriate" />

</LinearLayout>